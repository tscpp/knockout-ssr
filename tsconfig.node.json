{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json",
    "./tsconfig.json"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": false,
    "types": ["node"],
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["src/runtime"]
}
